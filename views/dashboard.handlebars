

{{!-- add ability to update and delete posts --}}

<div>the dashboard logged in</div>

{{#each userPosts}}
<div class="posts">
<h3>{{title}}</h3>
<p>uploaded on {{date_created}}</p>

<form method="get" action="deletepost{{id}}">
  <button type="submit" name="submit_param" value="submit_value" class="link-button">
  delete
  </button>
</form>

<form method="get" action="updatepost{{id}}">
  <button type="submit" name="submit_param" value="submit_value" class="link-button">
  update 
  </button>
</form>

</div>
{{/each}}


<a href="newpost"> create post </a>

